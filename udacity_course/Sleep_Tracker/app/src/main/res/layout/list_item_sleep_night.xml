<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="sleep" type="com.example.android.trackmysleepquality.database.SleepNight"/>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="60dp" app:srcCompat="@drawable/ic_sleep_5" android:id="@+id/quality_image"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintBottom_toBottomOf="parent"
                app:sleepImage="@{sleep}"
                android:layout_marginBottom="8dp"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/sleep_length"
                app:layout_constraintTop_toTopOf="@+id/quality_image"
                app:layout_constraintStart_toEndOf="@+id/quality_image" app:layout_constraintEnd_toEndOf="parent"
                app:sleepDurationFormatted="@{sleep}"
                android:layout_marginStart="8dp" android:layout_marginEnd="16dp" android:layout_marginTop="8dp"/>
        <TextView
                android:text="excellent"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/sleep_quality"
                app:layout_constraintStart_toEndOf="@+id/quality_image" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" android:layout_marginEnd="16dp"
                app:sleepQualityString="@{sleep}"
                app:layout_constraintTop_toBottomOf="@+id/sleep_length" android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>